<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <title>{% block title %}Ticket System{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('assets/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/fontawesome/css/all.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/select2.min.css') }}" rel="stylesheet">
        <style>
            body{
                background-color: rgba(0,0,0,0.05);
            }
        </style>
    {% endblock %}

    <!-- Bootstrap core JavaScript-->
    {% block javascripts %}
        <script src="{{ asset('assets/js/jquery.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.js') }}"></script>
        <script src="{{ asset('assets/js/select2.min.js') }}"></script>
    {% endblock %}
</head>
<body>
{% block menu %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('ticketpage') }}">TicketSystem</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('ticketpage') }}">Tickets <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('employeepage') }}">Employees</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('reportpage') }}">Reports</a>
                </li>
            </ul>
            <ul class="navbar-nav float-lg-right">
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i> {% block userName %} {{ app.user.firstname ~ " " ~ app.user.lastname }} {% endblock %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('logoutpage') }}"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
{% endblock menu %}
<!-- Begin page content -->
<div class="container-fluid">
    {% block body %}

    {% endblock %}
</div>
{% block footer %}
    <!-- Footer -->
    <footer class="page-footer fixed-bottom bg-secondary font-small text-white py-0">
        <!-- Copyright -->
        <div class="footer-copyright text-left py-3 px-5">Â© 2019 Copyright:
            <a href="javascript:void(0)"> www.TicketSystem.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
{% endblock footer %}
</body>
</html>
